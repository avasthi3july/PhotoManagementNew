<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:padding="5dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center_vertical|center_horizontal"
        android:text="Enter Email Address"
        android:textColor="#ffffff"
        android:textSize="20dp"
        android:textStyle="bold"
        android:visibility="gone">

    </TextView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <RelativeLayout
            android:id="@+id/mobLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/saveBtn"
            android:layout_centerVertical="true"
            android:layout_margin="5dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/country_code"
                android:layout_width="74dp"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/phone_layout"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignTop="@+id/phone_layout"
                android:layout_centerVertical="true"
                android:background="@null"
                android:drawableRight="@drawable/drop_down"
                android:gravity="right|center_vertical"
                android:text="+1"
                android:textSize="16dp">

            </TextView>

            <EditText
                android:id="@+id/mobNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="6dp"
                android:layout_toLeftOf="@+id/voice_view"
                android:layout_toRightOf="@+id/country_code"
                android:background="@null"
                android:gravity="left|center_vertical"
                android:hint="Enter Phone Number"
                android:inputType="phone"
                android:maxLines="2"
                android:padding="4dp"
                android:textSize="17dp" />
        </RelativeLayout>


        <Button
            android:id="@+id/send_sms"
            android:layout_width="70dp"
            android:layout_height="35dp"
            android:layout_marginTop="10dp"
            android:background="@color/colorPrimary"
            android:text="Send"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="11dp"
            android:background="@color/colorPrimary" />

        <Button
            android:id="@+id/contact_list"
            android:layout_width="120dp"
            android:layout_height="35dp"
            android:layout_alignParentRight="true"
            android:layout_margin="11dp"
            android:background="@color/colorPrimary"
            android:text="Contact"
            android:textColor="#ffffff"
            android:textSize="16dp"
            android:textStyle="bold" />
    </LinearLayout>
</LinearLayout>